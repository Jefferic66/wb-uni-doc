/* 阴影 */
.wb-shadow-box {
  box-shadow: 0px 0px 8px #dcdfe6;
}
.wb-shadow {
  position: relative;
}
.wb-shadow::before {
  content: "";
  display: block;
  background: inherit;
  filter: blur(3px);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 4px;
  left: 4px;
  /* z-index: 1; */
  opacity: 0.38;
  transform-origin: 0 0;
  border-radius: inherit;
  transform: scale(1, 1);
}
/* color 中的样式 */
