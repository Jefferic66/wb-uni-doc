}
/* 边框 */
.wb-b-b:after,
.wb-b-l:after,
.wb-b-r:after,
.wb-b-tb:after,
.wb-b-t:after,
.wb-b:after,
.wb-b-no:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  pointer-events: none;
  box-sizing: border-box;
  transform-origin: 0 0;
  width: 199.8%;
  height: 199.7%;
  transform: scale(0.5, 0.5);
  border: 0 solid #dcdfe6;
  z-index: 2;
}

.wb-b-t:after {
  border-top-width: 1px;
}

.wb-b-l:after {
  border-left-width: 1px;
}

.wb-b-r:after {
  border-right-width: 1px;
}

.wb-b-b:after {
  border-bottom-width: 1px;
}

.wb-b-tb:after {
  border-width: 1px 0;
}

.wb-b:after {
  border-width: 1px;
}

.wb-b-no:after {
  border: none !important;
}